<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <!--THEME-->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="WhiteBackgroundTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/white</item>
        <item name="colorControlNormal">@color/light_grey</item>
    </style>

    <style name="AppTheme.SettingsTheme" parent="AppTheme">
        <item name="colorButtonNormal">@color/color_setting_notificaiton_bg</item>
        <item name="android:windowBackground">@color/colorBackgroundLite</item>
    </style>

    <style name="FullScreenDialogTheme" parent="AppTheme">
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--BUTTON-->
    <style name="ButtonBlueBordered" parent="AppTheme">
        <item name="android:background">@drawable/button_blue_bordered</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">@dimen/button48_height</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-medium</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ButtonExit" parent="AppTheme">
        <item name="android:background">@drawable/button_ripple_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button48_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="ButtonResetPassword" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button48_height</item>
        <item name="android:background">@drawable/button_blue_ripple_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-medium</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="AppTheme.ButtonApply" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/button_ripple_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-medium</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:paddingStart">@dimen/apply_button_padding</item>
        <item name="android:paddingEnd">@dimen/apply_button_padding</item>
    </style>

    <!--TEXT-->
    <style name="BaseTextStyle" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
    </style>

    <style name="BaseTextStyle.ToolbarTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="BaseTextStyle.ItemName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/item_text_size</item>
        <item name="android:textColor">@color/main_font_color</item>
    </style>

    <style name="BaseTextStyle.SecondaryName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/item_secondary_text_size</item>
        <item name="android:textColor">@color/light_main_font_color</item>
    </style>

    <style name="BaseTextStyle.CardTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/card_title_text_size</item>
        <item name="android:textColor">@color/main_font_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BaseTextStyle.OutletName">
        <item name="android:textColor">@color/toolbar_outlet_title_color</item>
        <item name="android:textSize">@dimen/item_secondary_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="BaseTextStyle.ItemSpinnerName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/item_text_size</item>
        <item name="android:textColor">@color/main_font_color</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="BaseTextStyle.Chart">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/main_chart_title_text_size</item>
    </style>

    <style name="BaseTextStyle.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/item_text_size</item>
        <item name="android:textColor">@color/main_font_color_login</item>
        <item name="android:textColorHint">@color/hint_color_login</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/hint_text_size</item>
    </style>

    <style name="BaseTextStyle.AccessDenied">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="BaseTextStyle.TextOnButton">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/main_font_color</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-medium</item>
    </style>

    <style name="BaseTextStyle.ItemName_Login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/item_text_size</item>
        <item name="android:textColor">@color/main_font_color_login</item>
    </style>

    <style name="HorizontalViewDivider" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <!--IMAGE-->
    <style name="ItemIcon" parent="AppTheme">
        <item name="android:layout_width">@dimen/item_image_size</item>
        <item name="android:layout_height">@dimen/item_image_size</item>
        <item name="android:contentDescription">@string/item</item>
    </style>

    <style name="MaterialIconSize" parent="AppTheme">
        <item name="android:layout_width">@dimen/material_icon_button_size</item>
        <item name="android:layout_height">@dimen/material_icon_button_size</item>
        <item name="android:padding">@dimen/material_icon_button_padding_size</item>
    </style>

    <!--SWITCH-->
    <style name="AppTheme.SwitchOverlay">
        <item name="colorControlActivated">@color/switch_active_color</item>
    </style>

    <!--SEARCH-->
    <style name="AppTheme.SearchViewOverlay">
        <item name="colorAccent">@color/colorPrimaryLight</item>
    </style>

    <!--RecyclerView-->
    <style name="RecyclerViewReports" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">@dimen/max_width_container</item>
        <item name="android:layout_marginLeft">@dimen/edge_margin</item>
        <item name="android:layout_marginRight">@dimen/edge_margin</item>
        <item name="android:layout_marginEnd">@dimen/edge_margin</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_marginStart">@dimen/edge_margin</item>
    </style>

    <style name="ShadowViewReports" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:layout_marginBottom">@dimen/shadow_bottom_edge_margin</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">@drawable/cardview_down</item>
    </style>

    <!--ConstraintLayout-->
    <style name="BaseConstraintLayout" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">@dimen/max_width_container</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="BaseConstraintLayout.ResetPassword" parent="AppTheme">
        <item name="android:maxWidth">@dimen/max_width_card_reset_password</item>
    </style>

    <style name="BaseConstraintLayout.Login" parent="AppTheme">
        <item name="android:maxWidth">@dimen/max_width_login_container</item>
    </style>

    <style name="BaseText" parent="AppTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
        <item name="android:textSize">@dimen/item_text_size</item>
        <item name="android:textColor">@color/main_font_color</item>
    </style>


    <style name="DialogTheme" parent="Theme.AppCompat.DayNight.Dialog" />

    <style name="DialogTheme_Selection" parent="DialogTheme">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="TimePicker" parent="@android:style/Widget.Material.TimePicker">
        <item name="android:colorControlNormal">@color/very_light_white</item>
    </style>

    <style name="ShortLabel">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/light_main_font_color</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
</resources>
