<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ic_back"
                style="@style/MaterialIconSize"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/material_icon_button_padding_size"
                android:background="@drawable/ic_white_ripple_background"
                android:clickable="true"
                android:contentDescription="@string/backward"
                android:focusable="true"
                android:src="@drawable/ic_close" />

            <TextView
                android:id="@+id/title_text"
                style="@style/BaseTextStyle.ToolbarTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@+id/ic_next"
                android:layout_toEndOf="@+id/ic_back"
                android:text="loyverse.com"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/ic_next"
                style="@style/MaterialIconSize"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/material_icon_button_padding_size"
                android:background="@drawable/ic_white_ripple_background"
                android:clickable="true"
                android:contentDescription="@string/forward"
                android:focusable="true"
                android:src="@drawable/ic_next_browser" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
</com.google.android.material.appbar.AppBarLayout>