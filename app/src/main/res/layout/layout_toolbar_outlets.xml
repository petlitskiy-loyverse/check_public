<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title_text"
                style="@style/BaseTextStyle.ToolbarTitle"
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/period_toolbar_title_right_margin"
                android:layout_toEndOf="@+id/ic_back"
                android:gravity="center_horizontal"
                android:text="@string/outlet_selection" />

            <ImageView
                android:id="@+id/ic_back"
                style="@style/MaterialIconSize"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/material_icon_button_small_margin"
                android:background="@drawable/ic_white_ripple_background"
                android:clickable="true"
                android:contentDescription="@string/backward"
                android:src="@drawable/ic_arrow_back" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
</com.google.android.material.appbar.AppBarLayout>