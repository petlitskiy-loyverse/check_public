<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/medium_item_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/outlet_select_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/item_edge_margin"
        android:src="@drawable/ic_check"
        app:tint="@color/widget_color_blue" />

    <TextView
        android:id="@+id/outlet_title"
        style="@style/BaseTextStyle.ItemName"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/item_edge_margin"
        android:layout_marginEnd="@dimen/common_margin"
        android:layout_toStartOf="@+id/outlet_select_icon"
        android:maxLines="1"
        android:textAlignment="viewStart" />

</RelativeLayout>