<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/filter_item_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ic_product_filter_item_ripple_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_product_spinner_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/common_margin"
        android:src="@drawable/ic_check"
        app:tint="@color/widget_color_blue" />

    <TextView
        android:id="@+id/item_product_spinner_name"
        style="@style/BaseTextStyle.ItemSpinnerName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/common_margin"
        android:layout_marginEnd="@dimen/common_margin"
        android:layout_toStartOf="@id/item_product_spinner_selected"
        tools:text="Some text" />

    <View
        style="@style/HorizontalViewDivider"
        android:layout_alignParentBottom="true"
        android:background="@color/light_grey" />
</RelativeLayout>