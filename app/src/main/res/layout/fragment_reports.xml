<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    style="@style/AppTheme.SettingsTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/reports_nested_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false">

            <com.loyverse.dashboard.base.BoundedLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/edge_margin_reports"
                android:layout_marginRight="@dimen/edge_margin_reports"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingTop="@dimen/edge_margin_reports"
                android:paddingBottom="@dimen/edge_margin_reports"
                app:boundedWidth="@dimen/max_width_container">

                <com.loyverse.dashboard.base.NinePCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <include
                        layout="@layout/layout_main_indicators"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.loyverse.dashboard.base.NinePCardView>

                <com.loyverse.dashboard.base.NinePCardView
                    android:id="@+id/product_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/edge_margin_reports"
                    android:background="@color/color_chart_bg"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_chart_bg"
                        android:orientation="vertical">

                        <include
                            android:id="@+id/product_header"
                            layout="@layout/card_header"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/card_title_height" />

                        <View
                            style="@style/HorizontalViewDivider"
                            android:layout_marginStart="@dimen/margin_24"
                            android:layout_marginEnd="@dimen/margin_24"
                            android:background="@color/light_grey" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/top_products_list"
                            style="@style/RecyclerViewReports" />
                    </LinearLayout>
                </com.loyverse.dashboard.base.NinePCardView>

                <com.loyverse.dashboard.base.NinePCardView
                    android:id="@+id/categories_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/edge_margin_reports"
                    android:background="@color/color_chart_bg"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_chart_bg"
                        android:orientation="vertical">

                        <include
                            android:id="@+id/categories_header"
                            layout="@layout/card_header"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/card_title_height" />

                        <View
                            style="@style/HorizontalViewDivider"
                            android:layout_marginStart="@dimen/margin_24"
                            android:layout_marginEnd="@dimen/margin_24"
                            android:background="@color/light_grey" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/top_categories_list"
                            style="@style/RecyclerViewReports" />

                    </LinearLayout>
                </com.loyverse.dashboard.base.NinePCardView>

                <com.loyverse.dashboard.base.NinePCardView
                    android:id="@+id/employees_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/edge_margin_reports"
                    android:background="@color/color_chart_bg"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_chart_bg"
                        android:orientation="vertical">

                        <include
                            android:id="@+id/employees_header"
                            layout="@layout/card_header"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/card_title_height" />

                        <View
                            style="@style/HorizontalViewDivider"
                            android:layout_marginStart="@dimen/margin_24"
                            android:layout_marginEnd="@dimen/margin_24"
                            android:background="@color/light_grey" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/top_employees_list"
                            style="@style/RecyclerViewReports" />

                    </LinearLayout>
                </com.loyverse.dashboard.base.NinePCardView>

            </com.loyverse.dashboard.base.BoundedLinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>