<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height">

    <ImageView
        android:id="@+id/item_image"
        style="@style/ItemIcon"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/item_edge_margin"
        android:contentDescription="@null"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/item_sales_amount"
        style="@style/BaseTextStyle"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/item_edge_margin"
        android:textColor="@color/main_font_color"
        android:textSize="@dimen/item_text_size"
        tools:text="1 234 567" />

    <LinearLayout
        android:id="@+id/item_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/common_margin"
        android:layout_marginEnd="@dimen/common_margin"
        android:layout_toStartOf="@id/item_sales_amount"
        android:layout_toEndOf="@id/item_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_name"
            style="@style/BaseTextStyle.ItemName"
            android:layout_marginBottom="@dimen/tiny_margin"
            android:gravity="start"
            android:maxLines="1"
            android:textAlignment="viewStart"
            tools:text="Mango" />

        <TextView
            android:id="@+id/item_sales_count"
            style="@style/BaseTextStyle.SecondaryName"
            android:gravity="center_vertical"
            android:textAlignment="viewStart"
            tools:ignore="RtlCompat"
            tools:text="x451" />
    </LinearLayout>
</RelativeLayout>