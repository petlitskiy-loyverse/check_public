<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/medium_item_height"
    android:background="@color/colorBackgroundWhite"
    android:orientation="vertical">

    <View
        android:id="@+id/item_top_divider"
        style="@style/HorizontalViewDivider"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/edge_margin_item_sales_summary"
        android:layout_marginEnd="@dimen/edge_margin_item_sales_summary"
        android:background="@color/light_grey" />

    <TextView
        android:id="@+id/item_sales_summary_name"
        style="@style/BaseTextStyle"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/edge_margin_item_sales_summary"
        android:lines="1"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/item_text_size"
        tools:text="Some metric" />

    <me.grantland.widget.AutofitTextView
        android:id="@+id/item_sales_summary_value"
        android:layout_width="match_parent"
        android:layout_height="@dimen/medium_item_height"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/common_margin"
        android:layout_marginEnd="@dimen/edge_margin_item_sales_summary"
        android:layout_toEndOf="@id/item_sales_summary_name"
        android:fontFamily="sans-serif"
        android:gravity="end|center_vertical"
        android:lines="1"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/item_text_size"
        tools:text="0" />

    <View
        android:id="@+id/item_bottom_divider"
        style="@style/HorizontalViewDivider"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/edge_margin_item_sales_summary"
        android:layout_marginEnd="@dimen/edge_margin_item_sales_summary"
        android:background="@color/lighter_grey" />
</RelativeLayout>