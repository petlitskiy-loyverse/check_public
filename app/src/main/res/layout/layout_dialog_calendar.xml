<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp"
            app:contentInsetEnd="0dp"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/btn_back"
                    style="@style/MaterialIconSize"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/icon_back_margin"
                    android:background="@drawable/ic_white_ripple_background"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_arrow_back" />

                <!-- TODO: rewrite margins -->

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/btn_apply"
                    android:layout_toEndOf="@+id/btn_back"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_selected_period"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        tools:text="Aug 4 - Sept 12" />

                    <TextView
                        android:id="@+id/tv_selected_time"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:alpha="0.9"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:visibility="gone"
                        tools:text="12 AM - 12 PM" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <Button
                    android:id="@+id/btn_apply"
                    style="@style/AppTheme.ButtonApply"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="@string/apply" />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.loyverse.dashboard.mvp.calendar.VerticalCalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:monthTitleTextColor="@color/text_primary_dark"
            app:monthTitleViewHeight="@dimen/month_title_view_height" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/button48_height"
            android:background="@color/color_setting_notificaiton_bg"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_16"
            android:paddingEnd="0dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:contentDescription="@null"
                android:src="@drawable/ic_time" />

            <TextView
                style="@style/BaseText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_weight="1"
                android:text="@string/all_day" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_allday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:checked="true"
                app:theme="@style/AppTheme.SwitchOverlay" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_start"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button48_height"
            android:background="@color/color_setting_notificaiton_bg"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_16"
            android:paddingEnd="@dimen/margin_16"
            android:visibility="gone">


            <TextView
                android:id="@+id/tv_start"
                style="@style/BaseText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="38dp"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_weight="1"
                android:text="@string/start" />

            <TextView
                android:id="@+id/tv_start_value"
                style="@style/BaseText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="end" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_end"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button48_height"
            android:background="@color/color_setting_notificaiton_bg"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_16"
            android:paddingEnd="@dimen/margin_16"
            android:visibility="gone">


            <TextView
                android:id="@+id/tv_end"
                style="@style/BaseText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="38dp"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_weight="1"
                android:text="@string/end" />

            <TextView
                android:id="@+id/tv_end_value"
                style="@style/BaseText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="end" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>