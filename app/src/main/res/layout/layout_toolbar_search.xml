<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/search_close"
        style="@style/MaterialIconSize"
        android:layout_gravity="center"
        android:layout_marginStart="4dp"
        android:background="@drawable/ic_white_ripple_background"
        android:src="@drawable/ic_arrow_back" />

    <EditText
        android:id="@+id/search_view"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:hint="@string/search"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:maxLines="1"
        android:paddingStart="20dp"
        android:textAlignment="viewStart"
        android:textColor="#ffffff"
        android:textColorHint="#7fffffff"
        android:textCursorDrawable="@drawable/ic_white_cursor"
        android:textSize="@dimen/period_text_size"
        android:theme="@style/AppTheme.SearchViewOverlay"
        tools:ignore="RtlCompat" />

    <ImageView
        android:id="@+id/search_clear"
        style="@style/MaterialIconSize"
        android:layout_gravity="center"
        android:layout_marginEnd="4dp"
        android:background="@drawable/ic_white_ripple_background"
        android:src="@drawable/ic_close"
        android:visibility="gone" />
</LinearLayout>