<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_chart_bg"
    android:orientation="vertical"
    tools:targetApi="lollipop">

    <TextView
        android:id="@+id/sales_summary_card_title"
        style="@style/BaseTextStyle.CardTitle"
        android:layout_height="@dimen/card_title_height"
        android:text="@string/main_indicators" />

    <View
        style="@style/HorizontalViewDivider"
        android:layout_marginStart="@dimen/margin_24"
        android:layout_marginEnd="@dimen/margin_24"
        android:background="@color/light_grey" />

    <include
        android:id="@+id/earnings_metrics"
        layout="@layout/layout_dashboard_main_chart" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/earnings_chart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/chart_height"
        android:layout_marginStart="@dimen/bar_chart_left_margin"
        android:layout_marginEnd="@dimen/bar_chart_right_margin"
        android:layout_marginBottom="@dimen/bar_chart_bottom_margin"
        android:textAlignment="viewStart" />

</LinearLayout>